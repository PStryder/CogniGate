# CogniGate Standalone Mode Environment Configuration
# Copy to .env and configure for your environment

# =============================================================================
# STANDALONE MODE (Required)
# =============================================================================
# Enable standalone mode - disables AsyncGate polling, enables receipt storage
COGNIGATE_STANDALONE_MODE=true

# Directory for storing receipts (will be created if not exists)
COGNIGATE_RECEIPT_STORAGE_DIR=./receipts

# =============================================================================
# AI PROVIDER (Required)
# =============================================================================
# AI Provider endpoint (OpenRouter or OpenAI-compatible)
COGNIGATE_AI_ENDPOINT=https://openrouter.ai/api/v1
COGNIGATE_AI_API_KEY=your-openrouter-api-key
COGNIGATE_AI_MODEL=anthropic/claude-sonnet-4-20250514
COGNIGATE_AI_MAX_TOKENS=4096

# =============================================================================
# AUTHENTICATION (Required for production)
# =============================================================================
# API key for REST endpoint authentication (use cg_ prefix by convention)
COGNIGATE_API_KEY=cg_your-secret-api-key-here

# Require authentication for REST endpoints (default: true)
COGNIGATE_REQUIRE_AUTH=true

# Allow insecure dev mode - ONLY for local development (default: false)
# COGNIGATE_ALLOW_INSECURE_DEV=false

# =============================================================================
# SERVER SETTINGS
# =============================================================================
COGNIGATE_HOST=0.0.0.0
COGNIGATE_PORT=8000
COGNIGATE_WORKER_ID=cognigate-standalone-1

# =============================================================================
# WORKER SETTINGS
# =============================================================================
# Maximum concurrent job executions
COGNIGATE_MAX_CONCURRENT_JOBS=1

# Job timeout in seconds
COGNIGATE_JOB_TIMEOUT=300

# Maximum retries for failed tool calls
COGNIGATE_MAX_RETRIES=3

# =============================================================================
# PATHS (use defaults for Docker, adjust for local development)
# =============================================================================
COGNIGATE_CONFIG_DIR=./config
COGNIGATE_PLUGINS_DIR=./config/plugins
COGNIGATE_PROFILES_DIR=./config/profiles

# =============================================================================
# ASYNCGATE SETTINGS (Not used in standalone mode)
# =============================================================================
# These are ignored when COGNIGATE_STANDALONE_MODE=true
# COGNIGATE_ASYNCGATE_ENDPOINT=http://localhost:8080
# COGNIGATE_ASYNCGATE_AUTH_TOKEN=your-asyncgate-token
# COGNIGATE_POLLING_INTERVAL=5.0

# =============================================================================
# MCP SERVER TOKENS (Optional - used in mcp.yaml)
# =============================================================================
# GITHUB_MCP_TOKEN=your-github-token

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================
# COGNIGATE_RATE_LIMIT_ENABLED=true
# COGNIGATE_RATE_LIMIT_REQUESTS_PER_MINUTE=50

# =============================================================================
# CORS (Optional - defaults are fine for most cases)
# =============================================================================
# COGNIGATE_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
# COGNIGATE_CORS_ALLOW_CREDENTIALS=true
